                        <UniformGrid Columns="3" />
                        --><!-- Or use a regular Grid with custom layout logic --><!--
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        --><!-- Your repeating content here --><!--
