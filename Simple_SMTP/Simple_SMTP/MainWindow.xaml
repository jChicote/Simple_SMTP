                                <TextBlock Text="{Binding Description}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>-->

            <!-- Hover / Overlapping elements -->
            <Button Content="New Mail"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Width="140" Height="50" Margin="5,10,20,20" Background="#FF1300FF" Foreground="White" FontSize="18"/>
        </Grid>

    </Grid>
</Window>
